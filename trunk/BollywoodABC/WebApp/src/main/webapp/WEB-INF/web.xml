<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>	
	<!-- Filters -->
	<filter>
        <filter-name>ServerSideCache</filter-name>
        <filter-class>com.babc.server.servlet.CacheFilter</filter-class>
        <init-param>
			<param-name>excludePatterns</param-name>
			<param-value>/admin/*</param-value>
	    </init-param>
	    <init-param>
			<param-name>excludePatterns</param-name>
			<param-value>/rest/*</param-value>
	    </init-param>
	    <init-param>
			<param-name>excludePatterns</param-name>
			<param-value>/appstats/*</param-value>
	    </init-param>
        <description>
            Server Side compression filter.
        </description>
    </filter>
    
    <filter-mapping>
        <filter-name>ServerSideCache</filter-name>
        <url-pattern>*.htm</url-pattern>
    </filter-mapping>
    <!-- 
    <filter-mapping>
        <filter-name>ServerSideCache</filter-name>
        <url-pattern>*.gif</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ServerSideCache</filter-name>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ServerSideCache</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>
	 -->
	<!-- Servlets -->
	
	<!-- Appstats -->
	<servlet>
        <servlet-name>appstats</servlet-name>
        <servlet-class>com.google.appengine.tools.appstats.AppstatsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>appstats</servlet-name>
        <url-pattern>/appstats/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/appstats/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
	<!-- GAE Data Export - Start -->
	<servlet>
      <servlet-name>remoteapi</servlet-name>
      <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>remoteapi</servlet-name>
	      <url-pattern>/remote_api</url-pattern>
	</servlet-mapping>
	<security-constraint>
	      <web-resource-collection>
	            <web-resource-name>remoteapi</web-resource-name>
	            <url-pattern>/remote_api</url-pattern>
	       </web-resource-collection>
	       <auth-constraint>
	              <role-name>admin</role-name>
	       </auth-constraint>
	</security-constraint>
	<!-- GAE Data Export - Ends -->
	
	<!-- Session cleanup servlet -->
	<servlet>
	  <servlet-name>_ah_sessioncleanup</servlet-name>
	  <servlet-class>com.google.apphosting.utils.servlet.SessionCleanupServlet</servlet-class>
	</servlet>
	 
	<servlet-mapping>
	  <servlet-name>_ah_sessioncleanup</servlet-name>
	  <url-pattern>/_ah/sessioncleanup</url-pattern>
	</servlet-mapping>
	
	<!-- Spring Dispatcher servlet -->
	<servlet>
		<servlet-name>babcSpring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>log4j-properties-location</param-name>
			<param-value>WEB-INF/classes/log4j.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>babcSpring</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>babcSpring</servlet-name>
		<url-pattern>*.jpeg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>babcSpring</servlet-name>
		<url-pattern>*.php</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>babcSpring</servlet-name>
		<url-pattern>/messagebroker/amf</url-pattern>
	</servlet-mapping>
	<security-constraint>
        <web-resource-collection>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
	
	<!-- REST -->
	<servlet>
		<servlet-name>restserver</servlet-name>
		<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
		<init-param>
			<param-name>org.restlet.application</param-name>
			<param-value>org.restlet.example.serialization.gae.server.TestServerApplication</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>restserver</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	
	<!-- Mail fetch servlets -->
	<servlet>
	  <servlet-name>subscribeNewsLetterHandler</servlet-name>
	  <servlet-class>com.babc.server.servlet.SubscribeNewsletterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>subscribeNewsLetterHandler</servlet-name>
	  <url-pattern>/_ah/mail/subscribe*</url-pattern>
	</servlet-mapping>
	<servlet>
	  <servlet-name>unsubscribeNewsLetterHandler</servlet-name>
	  <servlet-class>com.babc.server.servlet.UnSubscribeNewsletterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>subscribeNewsLetterHandler</servlet-name>
	  <url-pattern>/_ah/mail/unsubscribe*</url-pattern>
	</servlet-mapping>
	<servlet>
	  <servlet-name>catchallhandler</servlet-name>
	  <servlet-class>com.babc.server.servlet.CatchAllMailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>catchallhandler</servlet-name>
	  <url-pattern>/_ah/mail/*</url-pattern>
	</servlet-mapping>
	
	<!-- SOAP servlet -->
	<servlet>
  		<servlet-name>soapservlet</servlet-name>
    	<servlet-class>com.babc.server.web.soap.SoapServlet</servlet-class>
  	</servlet>
	<servlet-mapping>
    	<servlet-name>soapservlet</servlet-name>
    	<url-pattern>/soapservice</url-pattern>
  	</servlet-mapping>
  	
  	
	<!-- XMPP incoming servlet -->
	<servlet>
  		<servlet-name>xmppreceiver</servlet-name>
    	<servlet-class>com.babc.server.xmpp.XMPPReceiverServlet</servlet-class>
  	</servlet>
	<servlet-mapping>
    	<servlet-name>xmppreceiver</servlet-name>
    	<url-pattern>/_ah/xmpp/message/chat/</url-pattern>
  	</servlet-mapping>
  	
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.htm</welcome-file>
	</welcome-file-list>
</web-app>